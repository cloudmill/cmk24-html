extends ../layouts/default.pug

block variables
 -var pageTitle='СМК24'

block content

    .content

        .start.section#start
            .inner.inner--relative
                h1.title.title--start Внедрим систему
                    br
                    |менеджмента качества
                h2.title.title--start-h2 ГОСТ Р ИСО 9001-2015
                p.text.text--start «Система менеджмента качества на соответствие»
                a.button.button--mg-t--30.button--start.js--modal(href="#question", data-form-id="Форма: Узнать подробнее с первого экрана") Узнать подробнее
                .start__bg-img
                    img(src="./images/start-bg.svg", alt="планета")
        
        .advant.section#advant
            .inner
                .title Преимущества
                .advant__colomn
                    .advant__row
                        .advant__item
                            .advant__content
                                .item-icon
                                    +icon("people", "svg")
                                p.text Личное присутствие
                                    br
                                    |эксперта-аудитора на предприятии
                            .link.item-link#one Ваш аудитор
                                .tooltip#tool-one 
                                    img(src="./images/auditor.png", alt="Державин Игорь")
                                .arrow
                        .advant__item
                            .advant__content
                                .item-icon
                                    +icon("akkred", "svg")
                                .text Аккредитованы
                                    br
                                    |РОССТАНДАРТОМ под номером
                                    br
                                    |№ РОСС RU.31763.04ЖОЭ2
                            a(href="https://www.rst.gov.ru/portal/gost/home/activity/compliance/VoluntaryAcknowledgement/reestr?portal:componentId=11f30a16-f554-4d49-a27a-e277ebf53b2f&portal:isSecure=false&portal:portletMode=view&navigationalstate=JBPNS_rO0ABXc5AAZhY3Rpb24AAAABABBjb25jcmV0ZURvY3VtZW50AAZkb2NfaWQAAAABAAQzMDk0AAdfX0VPRl9f", target="_blank").link.item-link.left Смотреть в реестре
                    .advant__row
                        .advant__item
                            .advant__content
                                .item-icon
                                    +icon("docx", "svg")
                                p.text Гарантии и алгоритм работы
                                    br
                                    |прописаны в Договоре
                            a(href="/docs/Типовой Договор Внедрение.pdf", download="").link.item-link Типовой договор
                        .advant__item
                            .advant__content
                                .item-icon
                                    +icon("certif", "svg")
                                p.text Выдаем сертификаты только
                                    br
                                    |от аккредитованных органов
                            a(href="/docs/Пример сертификата.pdf", download="").link.item-link.left Образец сертификата

        .tariffs.section#tariffs

            .inner

                .tariffs__list

                    .tariff
                    
                        h2.tariff__title Премиум
                        
                        button.tariff__description.js--tooltip(data-tooltip="tariff-1")

                            .link.link--help#five Варианты внедрения

                                .tooltip.tariff-tool#tool-five Выездной диагностический аудит предприятия. Отчет с рекомендациями по устранению несоответствий. Разработка документации под ваше предприятие. Обучение сотрудников отдела качества предприятия СМК. Консультационное сопровождение внедрения СМК на предприятии. Подготовка предприятия к аудит-проверкам
                                .arrow.tariff-arrow
                        
                        ul.tariff__info

                            li.tariff__info-item
                                h3.tariff__info-title Стоимость внедрения
                                p.tariff__info-text от 78 000 ₽
                                
                            li.tariff__info-item
                                h3.tariff__info-title Срок
                                p.tariff__info-text 2-6 месяца

                        a.tariff__button.button.button--blue.js--modal(href="#call", data-form-id="Форма: Заявка тарифа Премиум") Мне подходит 
                    
                    .tariff
                    
                        h2.tariff__title Стандарт
                        
                        button.tariff__description.js--tooltip(data-tooltip="tariff-1")

                            .link.link--help#six Варианты внедрения

                                .tooltip.tariff-tool#tool-six Аудит, дистанционное внедрение СМК, без выезда эксперта. Обучение отдела качества поддержанию СМК в рабочем состоянии. Сертификаты внутренних аудиторов. Взаимодействие проходит по скайп
                                .arrow.tariff-arrow
                        
                        ul.tariff__info

                            li.tariff__info-item
                                h3.tariff__info-title Стоимость внедрения
                                p.tariff__info-text от 47 000 ₽
                                
                            li.tariff__info-item
                                h3.tariff__info-title Срок
                                p.tariff__info-text 1,5-3 месяца

                        a.tariff__button.button.button--blue.js--modal(href="#call", data-form-id="Форма: Заявка тарифа Стандарт") Мне подходит 
                        
                    .tariff.tariff--highlight
                    
                        h2.tariff__title Базовый
                        
                        button.tariff__description.js--tooltip(data-tooltip="tariff-1")

                            .link.link--help.link--help--white#seven Варианты внедрения

                                .tooltip.tariff-tool#tool-seven Разработка необходимой документации и полноценное онлайн обучение персонала компании принципам внедрения СМК
